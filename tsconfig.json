{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",                       
    "paths": {
      "@shared/*": ["shared/*"]          
    }
  },
  "include": ["server", "shared"]
}

